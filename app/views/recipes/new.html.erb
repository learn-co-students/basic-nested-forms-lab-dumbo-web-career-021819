<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <ul>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>
  <% end %>
 </ul>
  <input name="commit" type="submit" value="submit" />
<% end %>
